<!-- 이력서가 파일인지 확인 -->
<select id="findResumeFile" resultType="int">
	SELECT COUNT(*)
	FROM RESUME_FILE_AFTER
	WHERE RSMSEQ = #{cvSeq}
</select>

<!-- 이력서 파일 내용 호출 -->
<select id="getResumeFile" resultType="model.ResumeFileDto">
	SELECT *
	FROM RESUME_FILE_AFTER
	WHERE RSMSEQ = #{cvSeq}
</select>

<!-- 지원자 현황 이력서 뷰 내용 취득 -->
<select id="getResumeAfter" resultType="model.ResumeAfterDto">
	SELECT *
	FROM RESUME_AFTER
	WHERE SEQ = #{seq}
</select>


